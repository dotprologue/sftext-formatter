{
  "name": "sftext-formatter",
  "displayName": "SFText Formatter",
  "description": "Formatter for SFText",
  "version": "1.0.0",
  "publisher": "Rugosa Soft",
  "icon": "icon.png",
  "keywords": [
    "sftext",
    "scenarioflow"
  ],
  "engines": {
    "vscode": "^1.81.0"
  },
  "categories": [
    "Formatters"
  ],
  "activationEvents": [
    "onLanguage:sftext"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "SFText Formatter",
      "properties": {
        "SFText Formatter.halfWidthCharacterList": {
          "order": 0,
          "type": "string",
          "default": "\\x01-\\x7E\\uFF65-\\uFF9F",
          "description": "Characters treated as half-width character. Enter characters like 'a-zA-Z!@#$%^&*()_+'."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.81.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint": "^8.47.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.1.6",
    "@vscode/test-electron": "^2.3.4"
  }
}